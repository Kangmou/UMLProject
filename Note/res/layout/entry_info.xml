<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

    </LinearLayout>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        
        <TextView 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:textAppearance="?android:textAppearanceLarge"
        	android:layout_weight="2"
        	android:gravity="center_vertical"
        	android:text="事件:" />
    
    	<EditText 
    	    android:id="@+id/info_entry"
			android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:inputType="none"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	android:textAppearance="?android:textAppearanceLarge" />
    	
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        
        <TextView 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:textAppearance="?android:textAppearanceLarge"
        	android:layout_weight="2"
        	android:gravity="center_vertical"
        	android:text="紧急程度:" />
    
    	<EditText 
    	    android:id="@+id/info_emergency"
			android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:inputType="none"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	android:textAppearance="?android:textAppearanceLarge" />
    	
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        
        <TextView 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:textAppearance="?android:textAppearanceLarge"
        	android:layout_weight="2"
        	android:gravity="center_vertical"
        	android:text="事件类型:" />
    
    	<Spinner
    	    android:id="@+id/info_kind"
			android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	android:textAppearance="?android:textAppearanceLarge" />
    	
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        
        <TextView 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:textAppearance="?android:textAppearanceLarge"
        	android:layout_weight="2"
        	android:gravity="center_vertical"
        	android:text="截止时间:" />
    
    	<Spinner
    	    android:id="@+id/info_deadline"
			android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	android:textAppearance="?android:textAppearanceLarge" />
    	
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    	
        <TextView 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:textAppearance="?android:textAppearanceLarge"
        	android:layout_weight="2"
        	android:gravity="center_vertical"
        	android:text="语音:" />
    
    	<ImageButton
    	    android:id="@+id/info_voice"
        	android:src="@drawable/music"
        	android:scaleType="fitCenter"
    	    android:layout_margin="5dip"
		    android:background="@drawable/button_shape"
			android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	android:textAppearance="?android:textAppearanceLarge" />
        
    </TableRow>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
    	
        <Button 
            android:id="@+id/info_ensure"
            android:layout_margin="5dip"
		    android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定" />
        
        <Button 
            android:id="@+id/info_cancel"
            android:layout_margin="5dip"
		    android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消" />
        
    </LinearLayout>

</LinearLayout>
